<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/bottomSheetView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/sp_12"
                tools:text="Are you sure you want to unfollow Kyle Abott?" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_light_gray" />

            <TextView
                android:id="@+id/tvAction1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/slection_red"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_light_gray" />


            <TextView
                android:id="@+id/tvAction2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/slection_blue"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>